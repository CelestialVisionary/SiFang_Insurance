<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sifang.insurance.auth.mapper.UserMapper">
    
    <select id="selectByUsername" resultType="com.sifang.insurance.auth.entity.User">
        SELECT * FROM sys_user WHERE username = #{username}
    </select>
    
    <select id="selectByPhone" resultType="com.sifang.insurance.auth.entity.User">
        SELECT * FROM sys_user WHERE phone = #{phone}
    </select>
</mapper>