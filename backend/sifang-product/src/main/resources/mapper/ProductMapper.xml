<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sifang.insurance.product.mapper.ProductMapper">
    
    <select id="selectPage" resultType="com.sifang.insurance.product.entity.Product">
        SELECT * FROM ins_product
        <where>
            <if test="type != null">
                AND type = #{type}
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
    
    <select id="selectByCode" resultType="com.sifang.insurance.product.entity.Product">
        SELECT * FROM ins_product WHERE code = #{code}
    </select>
    
    <select id="selectHotProducts" resultType="com.sifang.insurance.product.entity.Product">
        SELECT * FROM ins_product 
        WHERE status = 1 
        ORDER BY create_time DESC 
        LIMIT #{limit}
    </select>
    
    <select id="selectByType" resultType="com.sifang.insurance.product.entity.Product">
        SELECT * FROM ins_product 
        WHERE type = #{type} AND status = 1 
        ORDER BY create_time DESC
    </select>
</mapper>